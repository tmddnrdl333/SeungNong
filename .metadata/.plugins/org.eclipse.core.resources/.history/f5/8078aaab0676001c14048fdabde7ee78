package jan15th;

import java.util.Scanner;

class Adr {
	String name;
	int age;

	public void setName(String name) {
		this.name = name;
	}
}

public class prac {
	public static void main(String[] args) {
		while (true) {
			System.out.println("1. 추가\n2. 삭제\n3. 검색");
