			int inpNum;
			Scanner sc = new Scanner(System.in);
			inpNum = sc.nextInt();
			if (inpNum == 0) {
				System.out.println("# 프로그램을 종료합니다.");
				break;
			}

			switch(inpNum) {
			case 1:
				Adr cus = new Adr();
				System.out.println("# 이름을 입력하시오.");
				String name;
				Scanner sc1 = new Scanner(System.in);
				name = sc1.next();
				cus.setName(name);
				System.out.println("# "+cus.name+"을(를) 추가했습니다.");
				
				
				break;
			case 2:
				
			case 3:
				
			default:
				System.out.println("# 다시 입력하시오.");
				break;
			}

		}
	}
}
